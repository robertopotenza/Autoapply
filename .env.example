# OpenAI API Key for AI-powered content generation
OPENAI_API_KEY=your_openai_api_key_here

# PostgreSQL Database (Railway)
PGHOST=tramway.proxy.rlwy.net
PGUSER=postgres
PGPASSWORD=your_postgres_password
PGDATABASE=railway
PGPORT=5432

# JWT Secret (change in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=3000
NODE_ENV=production

# Logging Configuration
LOG_LEVEL=info

# Debug Mode (enables detailed SQL logging)
DEBUG_MODE=false

# Performance Logging (new - observability features)
PERF_LOG_ENABLED=false
PERF_LOG_SAMPLE_RATE=1.0
PERF_LOG_INCLUDE_BODY=false

# Admin Token (for debug endpoints in production)
ADMIN_TOKEN=

# Alerts Configuration
ALERTS_ENABLED=false
ALERTS_SLACK_WEBHOOK=
ALERTS_THRESHOLD_MS=500

# Schema Migration Configuration
AUTO_MIGRATION_ENABLED=false

# AI Trace Analysis Configuration
TRACE_ANALYSIS_ENABLED=false
TRACE_ANALYSIS_PERIOD_HOURS=24

# Sentry Configuration (Optional - for error tracking)
# Get your DSN from https://sentry.io/
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0

# Scanning interval in hours
SCAN_INTERVAL_HOURS=2

# Automation mode: auto | review
AUTOMATION_MODE=review
