{
  "name": "apply-autonomously-enhanced",
  "version": "2.0.0",
  "description": "Enhanced Auto-Apply Platform with Advanced Job Scanning, Application Automation, and User Authentication",
  "main": "src/server.js",
  "bin": {
    "autoapply": "./bin/autoapply.js"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "worker": "node src/index.js",
    "dev": "nodemon src/server.js",
    "build": "npm install",
    "test": "jest",
    "test:migrations": "node scripts/test-migration-sequence.js",
    "db:init": "node scripts/init-database.js",
    "db:migrate": "node database/migrations/run.js",
    "db:seed": "node database/seed.js",
    "db:check": "node scripts/check-db-connection.js",
    "db:migrate-all": "node scripts/run-all-migrations.js",
    "db:diagnose": "node scripts/diagnose-and-fix-db.js",
    "docs:audit": "node scripts/audit-documentation.js",
    "docs:diagram": "node scripts/generate-er-diagram.js"
