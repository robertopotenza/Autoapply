  "dependencies": {
    "@sentry/node": "^10.17.0",
    "axios": "^1.12.2",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dotenv": "^16.6.1",
    "dotenv-flow": "^4.1.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "node-cron": "^3.0.3",
    "openai": "^4.104.0",
    "pg": "^8.16.3",
    "resend": "^2.1.0",
    "uuid": "^9.0.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "commander": "^14.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/robertopotenza/Autoapply.git"
